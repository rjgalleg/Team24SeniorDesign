<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/AppTheme"
    android:background="#ffffff"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Sleep Patterns"
        android:textSize="40sp"
        android:layout_marginBottom="50dp"
        />


    <com.github.mikephil.charting.charts.CombinedChart
        android:id="@+id/sleep_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.94" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/options"
        android:text="Menu"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/sleep_pattern_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="View Sleep Patterns"
        android:layout_gravity="center_horizontal" />
    <Button
        android:id="@+id/log_sleep_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Log Hours"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/back_button2"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/sleep_hours"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Enter Hours"/>
    <EditText
        android:id="@+id/sleep_date"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Enter Date"
        android:inputType="date"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Store Hours"
        android:id="@+id/log_button"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/back_button"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
